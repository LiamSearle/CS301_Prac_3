COMPILER Bool  $CN
/* Simple logical thingy mabob.
   Liam Searle, Makungu Chansa, Matthew Lewis, Rhodes University, 2019 */

CHARACTERS
  term 		   = "abcdefghijklmnopqrstuvwxyz" .		
  t     	   = "true" .
  f 		   = "false" . 
  
TOKENS
  value   = (t|f) | term.
  start   = term "=".
  
IGNORE CHR(0) .. CHR(31)
  
PRODUCTIONS
  Bool    	 = {start Expression } EOF. 
  Expression = Term | Term Operator | "!" Term   . 
  Operator 	 = Not  | And | Or  .
  Or		 = ("||" | "or") Expression .
  And		 = ("&&" | "and") Expression .
  Not 		 = ("!"  | "not") Expression .
  Term 		 = value | value ";".
END Bool .


